{
    "name": "diogo-graciano/laravel-lua-engine",
    "description": "Laravel package for safely executing Lua scripts using PHP-Lua extension",
    "type": "library",
    "keywords": ["laravel", "lua", "sandbox", "scripting"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "DiogoGraciano\\LuaEngine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DiogoGraciano\\LuaEngine\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DiogoGraciano\\LuaEngine\\LuaEngineServiceProvider"
            ],
            "aliases": {
                "LuaEngine": "DiogoGraciano\\LuaEngine\\Facades\\LuaEngine"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-text"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

